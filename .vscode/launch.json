      "request": "launch",
      "args": [],
      "stopAtEntry": false,
      "externalConsole": true,
      "cwd": "c:/Users/Anjela/Documents/github/Softuni-typescript-tasks/01-ts",
      "program": "c:/Users/Anjela/Documents/github/Softuni-typescript-tasks/01-ts/build/Debug/outDebug",
      "MIMode": "gdb",
      "miDebuggerPath": "gdb",
      "setupCommands": [
