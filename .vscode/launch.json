{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch TypeScript File",
      "program": "${workspaceFolder}/out/${relativeFileDirname}/${fileBasenameNoExtension}.js",
